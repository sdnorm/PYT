<div class="max-w-4xl mx-auto p-6">
  <div class="bg-white rounded-lg shadow-sm p-6 mb-6">
    <div class="flex items-center space-x-4">
      <% if @current_user.avatar.attached? %>
        <%= image_tag @current_user.avatar, class: "h-20 w-20 rounded-full" %>
      <% else %>
        <div class="h-20 w-20 rounded-full bg-gray-200 flex items-center justify-center">
          <span class="text-2xl text-gray-500"><%= @current_user.initials %></span>
        </div>
      <% end %>
      
      <div>
        <h1 class="text-2xl font-bold"><%= @current_user.name %></h1>
        <p class="text-gray-600"><%= @current_user.email_address %></p>
      </div>
    </div>
  </div>

  <% if @teams.present? %>
    <div class="bg-white rounded-lg shadow-sm p-6 mb-6">
      <h2 class="text-xl font-semibold mb-4">Teams</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <% @teams.each do |team| %>
          <div class="border rounded p-4">
            <h3 class="font-medium"><%= team.name %></h3>
            <p class="text-sm text-gray-600"><%= team.role %></p>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <% if @children.present? %>
    <div class="bg-white rounded-lg shadow-sm p-6 mb-6">
      <h2 class="text-xl font-semibold mb-4">Children</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <% @children.each do |child| %>
          <div class="border rounded p-4">
            <h3 class="font-medium"><%= child.name %></h3>
            <p class="text-sm text-gray-600">Age: <%= child.age %></p>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <% if @recent_activities.present? %>
    <div class="bg-white rounded-lg shadow-sm p-6">
      <h2 class="text-xl font-semibold mb-4">Recent Activity</h2>
      <div class="space-y-4">
        <% @recent_activities.each do |activity| %>
          <div class="border-b last:border-b-0 pb-4 last:pb-0">
            <p class="text-gray-800"><%= activity.description %></p>
            <p class="text-sm text-gray-600"><%= time_ago_in_words(activity.created_at) %> ago</p>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
