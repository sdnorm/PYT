<%= turbo_frame_tag "settings_content" do %>
  <div id="notifications_form">
    <h2 class="text-xl font-semibold">Notification Preferences</h2>
    <p class="text-sm text-gray-500 mb-6">Manage how you receive notifications.</p>
    <div class="space-y-6 divide-y divide-gray-100 border-t border-gray-200 text-sm/6"></div>
    <div class="mx-auto max-w-2xl space-y-16 sm:space-y-20 lg:mx-0 lg:max-w-none">
      <%= form_with(model: @current_user, 
                  url: update_notifications_path,
                  class: "space-y-4",
                  data: { turbo: true }) do |f| %>
        
        <div class="space-y-4">
          <div class="flex items-center">
            <%= f.check_box :email_notifications, 
                class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
            <%= f.label :email_notifications, 
                "Email Notifications", 
                class: "ml-2 block text-sm text-gray-900" %>
          </div>
          
          <!-- Add more notification options as needed -->
        </div>

        <%= f.submit "Update notification preferences", 
            class: "btn-primary w-full", 
            data: { 
              disable_with: '<svg class="animate-spin -ml-1 mr-3 h-5 w-5 inline-block text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg> Updating...'
            } %>
      <% end %>
    </div>
  </div> 
<% end %>