<%= turbo_frame_tag "settings_content" do %>
  <div id="security_form" class="p-6">
    <h2 class="text-xl font-semibold mb-4">Security Settings</h2>
    <p class="text-sm text-gray-500 mb-6">Manage your account security settings and connected devices.</p>

  <div class="space-y-6">
    <div class="border-b pb-6">
      <h3 class="text-lg font-medium mb-4">Password</h3>
      <%= link_to "Change Password", 
          signed_in_edit_password_path,
          class: "text-indigo-600 hover:text-indigo-900" %>
    </div>

    <div class="border-b pb-6">
      <h3 class="text-lg font-medium mb-4">Two-Factor Authentication</h3>
      <!-- Add 2FA setup/management here -->
    </div>

    <div>
      <h3 class="text-lg font-medium text-red-600 mb-4">Danger Zone</h3>
      <%= button_to "Delete Account", 
          registration_path(@current_user), 
          method: :delete,
          data: { turbo_confirm: "Are you sure? This action cannot be undone." },
          class: "inline-flex justify-center rounded-md border border-transparent bg-red-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2" %>
      </div>
    </div>
  </div>
<% end %>