<div class="mx-auto max-w-7xl pt-6 lg:flex lg:gap-x-16 lg:px-8">
  <h1 class="sr-only">Account Settings</h1>

  <aside class="flex overflow-x-auto border-b border-gray-900/5 py-4 lg:block lg:w-64 lg:flex-none lg:border-0 lg:py-10">
    <nav class="flex-none px-4 sm:px-6 lg:px-0">
      <ul role="list" class="flex gap-x-3 gap-y-1 whitespace-nowrap lg:flex-col">
        <%= link_to user_settings_profile_path, 
            class: "group flex gap-x-3 rounded-md #{current_page?(user_settings_profile_path) || current_page?(user_settings_path) ? 'bg-gray-50 text-indigo-600' : 'text-gray-700 hover:text-indigo-600 hover:bg-gray-50'} py-2 pl-2 pr-3 text-sm/6 font-semibold",
            data: { turbo_frame: "settings_content" } do %>
          <svg class="h-6 w-6 shrink-0 #{current_page?(user_settings_profile_path) || current_page?(user_settings_path) ? 'text-indigo-600' : 'text-gray-400 group-hover:text-indigo-600'}" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17.982 18.725A7.488 7.488 0 0 0 12 15.75a7.488 7.488 0 0 0-5.982 2.975m11.963 0a9 9 0 1 0-11.963 0m11.963 0A8.966 8.966 0 0 1 12 21a8.966 8.966 0 0 1-5.982-2.275M15 9.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
          </svg>
          General
        <% end %>

        <%= link_to user_settings_security_path,
            class: "group flex gap-x-3 rounded-md #{current_page?(user_settings_security_path) ? 'bg-gray-50 text-indigo-600' : 'text-gray-700 hover:text-indigo-600 hover:bg-gray-50'} py-2 pl-2 pr-3 text-sm/6 font-semibold",
            data: { turbo_frame: "settings_content" } do %>
          <svg class="h-6 w-6 shrink-0 #{current_page?(user_settings_security_path) ? 'text-indigo-600' : 'text-gray-400 group-hover:text-indigo-600'}" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M7.864 4.243A7.5 7.5 0 0 1 19.5 10.5c0 2.92-.556 5.709-1.568 8.268M5.742 6.364A7.465 7.465 0 0 0 4.5 10.5a7.464 7.464 0 0 1-1.15 3.993m1.989 3.559A11.209 11.209 0 0 0 8.25 10.5a3.75 3.75 0 1 1 7.5 0c0 .527-.021 1.049-.064 1.565M12 10.5a14.94 14.94 0 0 1-3.6 9.75m6.633-4.596a18.666 18.666 0 0 1-2.485 5.33" />
          </svg>
          Security
        <% end %>

        <%= link_to user_settings_notifications_path,
            class: "group flex gap-x-3 rounded-md #{current_page?(user_settings_notifications_path) ? 'bg-gray-50 text-indigo-600' : 'text-gray-700 hover:text-indigo-600 hover:bg-gray-50'} py-2 pl-2 pr-3 text-sm/6 font-semibold",
            data: { turbo_frame: "settings_content" } do %>
          <svg class="h-6 w-6 shrink-0 #{current_page?(user_settings_notifications_path) ? 'text-indigo-600' : 'text-gray-400 group-hover:text-indigo-600'}" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 0 0 5.454-1.31A8.967 8.967 0 0 1 18 9.75V9A6 6 0 0 0 6 9v.75a8.967 8.967 0 0 1-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 0 1-5.714 0m5.714 0a3 3 0 1 1-5.714 0" />
          </svg>
          Notifications
        <% end %>
      </ul>
    </nav>
  </aside>

  <main class="px-4 py-6 sm:px-6 lg:flex-auto lg:px-0 lg:py-10">
    <%= render "user/forms/profile_form" %>
  </main>
</div> 